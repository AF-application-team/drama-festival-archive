<Window x:Class="AF_Desktop_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" WindowStartupLocation="CenterScreen" Width="1000" Height="700">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="SAVE" />
            <MenuItem Header="SETTINGS" />
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" Height="20">
        </StatusBar>
        <TabControl >
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Name="img" Height="auto" Width="auto" Source="Images/peopleIcon.png" />
                        <TextBlock Text="Osoby" Margin="2,0,0,0" VerticalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <DockPanel>
                    <ToolBar Band="1" BandIndex="1" VerticalAlignment="Top" DockPanel.Dock="Top">
                        <TextBox Margin="5" Width="100" />
                        <Button Width="auto" Height="20" Content="Search" Margin="0,5" Background="LightGray" />
                        <ComboBox SelectedIndex="0" Margin="10,5,5,5" >
                            <ComboBoxItem IsSelected="True">Job Filter</ComboBoxItem>
                            <ComboBoxItem>Directior</ComboBoxItem>
                            <ComboBoxItem>Screenwriter</ComboBoxItem>
                        </ComboBox>
                        <ComboBox SelectedIndex="0" Margin="5,5">
                            <ComboBoxItem>Position Filter</ComboBoxItem>
                            <ComboBoxItem>Jury</ComboBoxItem>
                            <ComboBoxItem>Lighting producer</ComboBoxItem>
                        </ComboBox>
                        <ComboBox SelectedIndex="0" Margin="5,5">
                            <ComboBoxItem>Class Profile</ComboBoxItem>
                            <ComboBoxItem>a</ComboBoxItem>
                            <ComboBoxItem>b</ComboBoxItem>
                            <ComboBoxItem>c</ComboBoxItem>
                            <ComboBoxItem>d</ComboBoxItem>
                            <ComboBoxItem>e</ComboBoxItem>
                        </ComboBox>

                    </ToolBar>
                    <DataGrid DockPanel.Dock="Bottom" >
                    
                    </DataGrid>
                </DockPanel>
            </TabItem>
            <TabItem Header="Przedstawienia">
                <DockPanel>
                    <ToolBar Band="1" BandIndex="1" VerticalAlignment="Top" DockPanel.Dock="Top">
                        <TextBox Margin="5" Width="100" />
                        <Button Width="auto" Height="20" Content="Search" Margin="0,5" Background="LightGray" />
                        <ComboBox SelectedIndex="0" Margin="10,5,5,5">
                            <ComboBoxItem>Award Filter</ComboBoxItem>
                            <ComboBoxItem>Grand Prix</ComboBoxItem>
                            <ComboBoxItem>Small Grand Prix</ComboBoxItem>
                        </ComboBox>
                        <ComboBox SelectedIndex="0" Margin="5,5">
                            <ComboBoxItem>Festival Filter</ComboBoxItem>
                            <ComboBoxItem>XX</ComboBoxItem>
                            <ComboBoxItem>XXI</ComboBoxItem>
                        </ComboBox>
                        <ComboBox SelectedIndex="0" Margin="5,5" >
                            <ComboBoxItem>Class Profile</ComboBoxItem>
                            <ComboBoxItem>a</ComboBoxItem>
                            <ComboBoxItem>b</ComboBoxItem>
                            <ComboBoxItem>c</ComboBoxItem>
                            <ComboBoxItem>d</ComboBoxItem>
                            <ComboBoxItem>e</ComboBoxItem>
                        </ComboBox>

                    </ToolBar>
                    <DataGrid DockPanel.Dock="Bottom" >

                    </DataGrid>
                </DockPanel>
            </TabItem>
            <TabItem Header="Nagrody">
                <DockPanel>
                    <ToolBar Band="1" BandIndex="1" VerticalAlignment="Top" DockPanel.Dock="Top">
                        <TextBox Margin="5" Width="100" />
                        <Button Width="auto" Height="20" Content="Search" Margin="0,5" Background="LightGray" />
                        <ComboBox SelectedIndex="0" Margin="10,5,5,5">
                            <ComboBoxItem>Award Filter</ComboBoxItem>
                            <ComboBoxItem>Grand Prix</ComboBoxItem>
                            <ComboBoxItem>Small Grand Prix</ComboBoxItem>
                        </ComboBox>
                        <ComboBox SelectedIndex="0" Margin="5,5">
                            <ComboBoxItem>Festival Filter</ComboBoxItem>
                            <ComboBoxItem>XX</ComboBoxItem>
                            <ComboBoxItem>XXI</ComboBoxItem>
                        </ComboBox>
                        <ComboBox SelectedIndex="0" Margin="5,5" >
                            <ComboBoxItem>Class Year</ComboBoxItem>
                            <ComboBoxItem>1992</ComboBoxItem>
                            <ComboBoxItem>1989</ComboBoxItem>
                            <ComboBoxItem>1987</ComboBoxItem>
                            <ComboBoxItem>1986</ComboBoxItem>
                            <ComboBoxItem>1985</ComboBoxItem>
                        </ComboBox>

                    </ToolBar>
                    <DataGrid DockPanel.Dock="Bottom" >

                    </DataGrid>
                </DockPanel>
            </TabItem>
            <TabItem Header="Konfiguracja">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />                        
                    </Grid.ColumnDefinitions>
                    <Label Content="Categories" Grid.Column="0" />
                    <Label Content="Jobs" Grid.Column="1" />
                    <Label Content="Positions" Grid.Column="2" />
                    <Label Content="Other" Grid.Column="3" Margin="2,0,-2,0" />
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
